<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/context_layout">
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_name"
        style="@style/context_section"
        app:label_text="客户名称:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_subname"
        style="@style/context_section"
        app:label_text="客户简称:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_taitou"
        style="@style/context_section"
        app:label_text="发票抬头:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_nature"
        style="@style/context_section"
        app:label_text="客户性质:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_address"
        style="@style/context_section"
        app:label_text="所在地区:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_remark"
        style="@style/context_section"
        app:label_text="备注:"
        />
    <com.joint.turman.customwidget.section.ReadableSection
        android:id="@+id/frg_client_others"
        style="@style/context_section"
        app:label_text="情况说明:"
        />
</LinearLayout>