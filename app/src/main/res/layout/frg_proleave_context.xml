<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/context_layout">
        <com.joint.turman.customwidget.section.ReadableSection
            android:id="@+id/frg_proleave_project"
            style="@style/context_section"
            app:isLink="true"
            app:label_text="项目名称:"
            />
        <com.joint.turman.customwidget.section.ReadableSection
            android:id="@+id/frg_proleave_date"
            style="@style/context_section"
            app:label_text="请假日期:"
            />
        <com.joint.turman.customwidget.section.ReadableSection
            android:id="@+id/frg_proleave_reason"
            style="@style/context_section"
            app:label_text="请假事由:"
            />
        <com.joint.turman.customwidget.section.ReadableSection
            android:id="@+id/frg_proleave_man"
            style="@style/context_section"
            app:label_text="请假人:"
            />
        <com.joint.turman.customwidget.section.ReadableSection
            android:id="@+id/frg_proleave_createDate"
            style="@style/context_section"
            app:label_text="新建时间:"
            />
    </LinearLayout>
</ScrollView>