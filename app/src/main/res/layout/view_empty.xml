<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_err_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_base_background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/empty_err_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/page_icon_failed"
                    android:visibility="gone"
                    />
                <ProgressBar
                    android:id="@+id/empty_progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateDrawable="@drawable/animdraw"
                    android:indeterminateDuration="1500"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/empty_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:gravity="center"
                android:text="@string/view_reload"
                android:textColor="@color/gray"
                android:textSize="@dimen/space_16"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


















